@using Microsoft.AspNetCore.Identity
@using Taavoni.Models.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);

        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
             <span class="mr-2 d-lg-inline text-gray-600 small" style="font-size: 20px; color:#00000"> @user?.Email.ToString().Substring(0,user.UserName.ToString().IndexOf('@'))</span>
             <span class="topbar-divider d-none d-sm-block"></span>
                <span class="mr-2 d-lg-inline text-gray-600 small"> @user?.Name</span>
                           

                <span class="mr-2 d-lg-inline text-gray-600 small">
                    <img class="img-profile rounded-circle" src="~/assets/img/undraw_profile.svg">
                </span>
                 

            </a>
             
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">خروج</button>
            </form>
        </li>
        







    }
    else
    {
        @* <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">ثبت نام</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">ورود</a>
    </li> *@
    }
</ul>



