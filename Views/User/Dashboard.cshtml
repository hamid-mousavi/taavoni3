<div class="card shadow mb-4 ">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">جزئیات بدهی‌ها</h6>
    </div>
    <div class="card-body">

 

        <div class="table-responsive">
            <table class="table table-bordered dataTable" id="debttable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <td>عنوان</td>
                        <td>از تاریخ</td>
                        <td>تا تاریخ</td>
                        <td>تاریخ سررسید</td>
                        <td>@("مبلغ ".ToPersianUnit())</td>
                        @* <td>مبلغ بااحتساب جریمه</td> *@
                        @* <td>مبلغ باقیمانده</td> *@


                    </tr>
                </thead>
                <tbody>
                    @foreach (var debt in Model.DebtDetails)
                    {
                        <tr>
                            <td>@debt.Title</td>

                            <td>@debt.StartDate.ToPersianDateTextify()</td>
                            <td>@debt.EndDate.ToPersianDateTextify()</td>
                            <td>@debt.DueDate.ToPersianDateTextify()</td>
                            <td>@debt.Amount.ToString().ToPersianNumbers()</td>
                            
                            @* <td>@debt.TotalDeptWithPenaltyRate.ToString("N0").ToPersianNumbers()</td> *@
                        @* <td>@debt.RemainingAmount.ToString("N0").ToPersianNumbers()</td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="card shadow mb-4 dataTable-responsive">
