                    <tr>
                        <th>عنوان</th>
                        <th>مبلغ</th>
                        <th>تاریخ پرداخت</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model.PaymentDetails)
                    {
                        <tr>
                            <td>@payment.Title</td>
                           
                            <td>@payment.Amount.ToString("N0").ToPersianNumbers()</td>
                           
                            <td>@( payment.PaymentDate.HasValue ? payment.PaymentDate.Value.ToPersianDateTextify() : "تاریخ موجود نیست")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
