@model Taavoni.DTOs.CreateAllDebtDto

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger" style="font-size: 30px;">ثبت بدهی: برای کلیه کاربران ثبت می شود
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="CreateAll" method="post">
                <div class="form-group">
                    <label for="DebtTitleId">عنوان بدهی:</label>
                    <select asp-for="DebtTitleId" asp-items="ViewBag.DebtTitles" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label for="Amount">مبلغ بدهی:</label>
                    <input asp-for="Amount" class="form-control" type="number" step="0.01"
                        placeholder="مبلغ را وارد کنید" />
                </div>
                <div class="form-group">
                    <label for="PenaltyRate">درصد جریمه:</label>
                    <input asp-for="PenaltyRate" class="form-control" type="number" placeholder="درصد روزانه جریمه" />
                    <span asp-validation-for="PenaltyRate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="FromDate">از تاریخ:</label>
                    <input asp-for="FromDate" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <label for="ToDate">تا تاریخ:</label>
                    <input asp-for="ToDate" class="form-control" type="text" />
                </div>
                <div class="form-group">
                    <label for="DueDate">تاریخ سررسید:</label>
                    <input asp-for="DueDate" class="form-control" type="text" />
                </div>
                <button type="submit" class="btn btn-primary">ثبت بدهی</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link href="https://cdn.jsdelivr.net/npm/persian-datepicker/dist/css/persian-datepicker.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/persian-date/dist/persian-date.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-datepicker/dist/js/persian-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#FromDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
            $('#ToDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
            $('#DueDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
        });





    </script>


}
