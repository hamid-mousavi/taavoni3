@model DebtDetailDTO
@using Taavoni.DTOs
<form method="post" asp-action="Edit">
        <div class="form-group">
        <label for="UserId">نام کاربر</label>
        <input type="text" class="form-control" id="UserId" name="UserId" value="@Model.UserName.ToString()" readonly />
    </div>
    <div class="form-group">
        <label for="StartDate">تاریخ شروع</label>
        <input type="text" class="form-control" id="StartDate" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="EndDate">تاریخ پایان</label>
        <input type="text" class="form-control" id="EndDate" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
    </div>
        <div class="form-group">
        <label for="DueDate">تاریخ سررسید</label>
        <input type="text" class="form-control" id="DueDate" name="DueDate" value="@Model.DueDate.ToString("yyyy-MM-dd")" required />
    </div>
    <input type="hidden" asp-for="Id" />
    <div>
        <label for="DebtTitleId">Debt Title:</label>
        <select asp-for="DebtTitleId" asp-items="@(ViewBag.DebtTitles)"class="form-control">
            <option value="">Select Title</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Amount">مبلغ کل</label>
        <input type="text" class="form-control" id="Amount" name="Amount" value="@Model.Amount" required />
    </div>
      <div class="form-group">
        <label for="PenaltyRate">نرخ جریمه</label>
        <input type="text" class="form-control" id="PenaltyRate" name="PenaltyRate" value="@Model.PenaltyRate" required />
    </div>
      
        <div class="form-group col-3">
        <label asp-for="IsPaid"></label>
        @Html.CheckBoxFor(model => model.IsPaid)
    </div>
    
    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
</form>




@section Scripts {

    <link href="https://cdn.jsdelivr.net/npm/persian-datepicker/dist/css/persian-datepicker.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/persian-date/dist/persian-date.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/persian-datepicker/dist/js/persian-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#StartDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
            $('#EndDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
            $('#DueDate').persianDatepicker({
                format: 'YYYY/MM/DD',
                autoClose: true
            });
        });





    </script>


}

